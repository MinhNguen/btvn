#include <bits/stdc++.h>

using namespace std;
int main(){
int n;
cin >> n;
int a[n];
double count1 = 0 ;
double count2 =0;
double count3=0;
for ( int i=0 ; i<n ; i++){
    cin >> a[i];}
    for ( int i=0 ; i<n;i++){
    if ( a[i] ==0){
        count1 ++;
    }
    else if ( a[i]>0){
        count2 ++;
        
    }else{
        count3++;
    }
    }
    cout << fixed << setprecision(6) << count2/n << endl;
    cout << fixed << setprecision(6) << count3/n << endl;
    cout << fixed << setprecision(6) << count1/n << endl;
}
